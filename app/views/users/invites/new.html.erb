<div class="container">
  <h2 class="mt-4 mb-4 ">アイデア募集</h2>
  <%= form_with model: [:users, @new_invite], local: true do |f| %>
    <div class="row mb-3">
      <div class="col-3 offset-2"><%= f.label :アイデア募集画像 %></div>
      <div class="col-3"><%= f.attachment_field :invite_image %></div>
    </div>
    <div class="row mb-3">
      <div class="col-3 offset-2"><%= f.label :アイデア募集名 %></div>
      <div class="col-3"><%= f.text_field :invite_name, autofocus: true %></div>
    </div>
    <div class="row mb-3">
      <div class="col-3 offset-2"><%= f.label :タグ %></div>
      <div class="col-3"></div>
    </div>
    <div class="row mb-3">
      <div class="col-3 offset-2"><%= f.label :アイデア募集説明 %></div>
      <div class="col-3"><%= f.text_area :invite_description, autofocus: true %></div>
    </div>
    <div class="row mb-3">
      <div class="col-2 offset-5"><%= f.submit "投稿", class: "btn btn-success" %></div>
    </div>
  <% end %>
</div>