<div class="container">
  <h2 class="mt-4 mb-1"><%= @invite.invite_name %></h2>
  <p class="mb-4"><%= @invite.created_at.to_s(:datetime_ymd) %></p>
  <div class="row d-flex">
    <h5 class="col-6">
      <%= attachment_image_tag @invite.user, :user_image, :fill, 50, 50, fallback: "no_image.jpg", size: "50x50" %>
      <%= link_to @invite.user.name, users_user_path(@invite.user) %>
    </h5>
    <div class="col-6">
    <% if @invite.user == current_user %>
      <td><%= link_to "編集する", edit_users_invite_path(@invite), class:"btn btn-sm btn-success" %></td>
      <td><%= link_to "削除する", users_invite_path(@invite), method: :delete, "data-confirm" => "本当に消しますか？", class:"btn btn-sm btn-danger" %></td>
    <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-4">
      <div><%= attachment_image_tag @invite, :invite_image, fallback: "no_invite_image.jpg", size: "250x200" %></div>
      <p>タグ #〇〇　#〇〇</p>
    </div>
    <div class="col-6">
      <p>（アイデア募集説明）</p>
      <p><%= @invite.invite_description %></p>
    </div>
  </div>
  <h3 class="mt-3 mb-3 text-center">コメント一覧</h3>
  <%= render 'users/invite_comments/comment', invite: @invite, invite_comment: @invite_comment %>
</div>