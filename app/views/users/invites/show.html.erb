<div class="container">
  <h2 class="mt-4 mb-4"><%= @invite.invite_name %></h2>
  <div class="row d-flex">
    <h5 class="col-6">ユーザーネーム</h5>
    <div class="col-6">
    <% if @invite.user == current_user %>
      <td><%= link_to "編集する", edit_users_invite_path(@invite), class:"btn btn-sm btn-success" %></td>
      <td><%= link_to "削除する", users_invite_path(@invite), method: :delete, "data-confirm" => "本当に消しますか？", class:"btn btn-sm btn-danger" %></td>
    <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-4">
      <div><%= attachment_image_tag @invite, :invite_image, fallback: "no-invite-image.jpg", size: "250x200" %></div>
      <p>コメント</p>
      <p>タグ #〇〇　#〇〇</p>
    </div>
    <div class="col-6">
      <p>（アイデア募集説明）</p>
      <p><%= @invite.invite_description %></p>
    </div>
  </div>
  <h3 class="mt-3 mb-3 text-center">コメント一覧</h3>
</div>