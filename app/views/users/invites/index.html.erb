<div class="container">
  <div class="row mt-4 mb-4">
    <div class="col-md-12 align-ceter">
      <h2>アイデア募集一覧</h2><span>(全<%= @invite_count %>件)</span>
      <div class="col-md-8 offset-md-1">
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th>アイデア募集名</th>
              <th>ユーザー名</th>
              <th></th>
              <th colspan="4"></th>
            </tr>
          </thead>
          <tbody>
            <% @invites.each do |invite| %>
            <tr>
              <td><%= link_to invite.invite_name, users_invite_path(invite) %></td>
              <td><%= link_to invite.user.name, users_user_path(invite.user) %></td>
              <td><%= invite.created_at.to_s(:datetime_ymd) %></td>
              <td><%= invite.invite_comments.count %>コメント</td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="d-flex justify-content-center"> <!-- ページング機能　-->
      <%= paginate @invites %>
    </div>
  </div>
</div>