<div class="container mt-5 mb-5">
  <h2 class="mt-4 mb-5">アイデア募集一覧<span class="h4"> (全<%= @invites.count %>件)</span></h2>
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th>アイデア募集名</th>
        <th>ユーザー名</th>
        <th>投稿日</th>
        <th colspan=5></th>
      </tr>
    </thead>
    <tbody>
      <% @invites.each do |invite| %>
      <tr>
        <td><%= link_to invite.invite_name, users_invite_path(invite) %></td>
        <td><%= link_to invite.user.name, users_user_path(invite.user) %></td>
        <td><%= invite.created_at.to_s(:datetime_ymd) %></td>
        <td><%= invite.invite_comments.count %>コメント</td>
        <td><%= render "tag", invite: invite %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <div class="d-flex justify-content-center"> <!-- ページング機能　-->
    <%= paginate @invites %>
  </div>
</div>