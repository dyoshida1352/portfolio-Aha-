<div class="container">
	<h2 class="head-line mt-4 mb-4"><%= @user.name %>　のページ</h2>
	<% if @user == current_user %>
	<div></div>
	<% end %>
	<div>
		<div>
			<div class="row h5 d-flex align-items-center mb-4">
				<div><%= attachment_image_tag @user, :user_image, fallback: "no_image.jpg", size: "250x200" %></div>
				<div class="col-2">
				<% if current_user != @user %>
					<% if current_user.following?(@user) %>
					  <%= link_to "フォロー外す", users_user_relationships_path(@user.id), method: :delete, class: "btn btn-primary" %>
					<% else %>
					  <%= link_to "フォローする", users_user_relationships_path(@user.id), method: :post, class: "btn btn-success" %>
					<% end %>
				<% else %>
					<%= link_to " 編集する", edit_users_user_path, class: "glyphicon glyphicon-pencil btn btn-success" %>
				<% end %>
				</div>
			</div>
			<div>
				<div class="row mb-3" >
					<div class="col-2">ユーザーネーム</div>
					<div class="col-4"><%= @user.name %></div>
				</div>
				<div class="row mb-3" >
					<div class="col-2">年代</div>
					<div class="col-4"><%= @user.age %></div>
				</div>
				<div class="row mb-3" >
					<div class="col-2">アイデア投稿</div>
					<div class="col-4"><%= link_to @user.posts.count, users_posts_path(user_id: @user.id) %>件</div>
				</div>
				<div class="row mb-3" >
					<div class="col-2">グッドアイデア</div>
					<div class="col-4">件</div>
				</div>
				<div class="row mb-4" >
					<div class="col-2">アイデア募集</div>
					<div class="col-4"><%= link_to @user.invites.count, users_invites_path(user_id: @user.id) %>件</div>
				</div>
				<% if current_user == @user %>
				<div class="row mb-4" >
					<div class="col-2">いいねしたアイデア</div>
					<div class="col-4"><%= link_to @user.likes.count, users_posts_path(like_id: @user.id) %>件</div>
				</div>
				<% end %>
				<div class="row mb-4" >
					<div class="col-2">フォロー</div>
					<div class="col-4"><%= link_to @user.followings.count, users_user_followings_path(@user) %> 人</div>
				</div>
				<div class="row mb-4" >
					<div class="col-2">フォロワー</div>
					<div class="col-4"><%= link_to @user.followers.count, users_user_followers_path(@user) %> 人</div>
				</div>
			</div>
		</div>
	</div>
</div>