<div class="container mt-5 mb-5">
	<h2 class="head-line mt-4 mb-4"><%= @user.name %>　のページ</h2>
	<div class="row h5 d-flex align-items-center justify-content-center mb-4">
		<div class="col-md-2 mt-3 d-flex justify-content-center"><%= attachment_image_tag @user, :user_image, fallback: "no_image.jpg", size: "250x200", class: "rounded-circle" %></div>
		<div class="col-md-4 mt-3 text-center">
		<% if user_signed_in? %>
			<% if current_user != @user %>
				<% if current_user.following?(@user) %>
				  <%= link_to "フォロー外す", users_user_relationships_path(@user.id), method: :delete, class: "btn btn-primary" %>
				<% else %>
				  <%= link_to "フォローする", users_user_relationships_path(@user.id), method: :post, class: "btn btn-success" %>
				<% end %>
			<% else %>
				<%= link_to " 編集する", edit_users_user_path, class: "glyphicon glyphicon-pencil btn btn-success" %>
			<% end %>
		<% end %>
		</div>
	</div>
	<div>
		<div class="row mb-3 d-flex justify-content-center" >
			<div class="col-md-2">ユーザーネーム</div>
			<div class="col-md-4"><%= @user.name %></div>
		</div>
		<div class="row mb-3 d-flex justify-content-center">
			<div class="col-md-2">年代</div>
			<div class="col-md-4"><%= @user.age %></div>
		</div>
		<div class="row mb-3 d-flex justify-content-center">
			<div class="col-md-2">アイデア投稿</div>
			<div class="col-md-4"><%= link_to @user.posts.count, users_posts_path(user_id: @user.id) %> 件</div>
		</div>
		<div class="row mb-4 d-flex justify-content-center">
			<div class="col-md-2">アイデア募集</div>
			<div class="col-md-4"><%= link_to @user.invites.count, users_invites_path(user_id: @user.id) %> 件</div>
		</div>
		<% if current_user == @user %>
		<div class="row mb-4 d-flex justify-content-center">
			<div class="col-md-2">いいねしたアイデア</div>
			<div class="col-md-4"><%= link_to @user.likes.count, users_posts_path(like_id: @user.id) %> 件</div>
		</div>
		<% end %>
		<div class="row mb-4 d-flex justify-content-center">
			<div class="col-md-2">フォロー</div>
			<div class="col-md-4"><%= link_to @user.followings.count, users_user_followings_path(@user) %> 人</div>
		</div>
		<div class="row d-flex justify-content-center">
			<div class="col-md-2">フォロワー</div>
			<div class="col-md-4"><%= link_to @user.followers.count, users_user_followers_path(@user) %> 人</div>
		</div>
	</div>
</div>