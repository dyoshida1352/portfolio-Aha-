<% if post.liked_by?(current_user) %>
  <%= link_to post.likes.count, users_post_likes_path(post), method: :delete, remote: true, class: "fas fa-heart heart_red" %>
<% else %>
  <%= link_to post.likes.count, users_post_likes_path(post), method: :post, remote: true, class: "fas fa-heart heart_blue" %>
<% end %>