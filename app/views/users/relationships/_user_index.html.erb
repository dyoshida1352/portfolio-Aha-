<table class='table'>
  <thead class="bg-light">
    <tr>
      <th></th>
      <th>ユーザーネーム</th>
      <th colspan="5"></th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td><%= attachment_image_tag(user, :user_image, :fill, 50, 50, fallback: "no_image.jpg", class: "rounded-circle") %></td>
        <td><%= link_to user.name, users_user_path(user) %></td>
        <td>アイデア投稿: <%= user.posts.count %></td>
        <td>アイデア募集: <%= user.invites.count %></td>
        <td id="relationship-btn">
        <% if user_signed_in? %>
          <% if current_user != user %>
            <%= render 'relationship-btn', user: user %>
          <% end %>
        <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
