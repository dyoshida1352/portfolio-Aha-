<div class="container mt-5">
  <h2 class="mt-4 mb-5 text-center">新規登録</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>
    <div class="row mb-3 d-flex justify-content-center">
      <div class="col-3"><%= f.label :ユーザーネーム %></div>
      <div class="col-3"><%= f.text_field :name, class: "form-control", autofocus: true %></div>
    </div>
    <div class="row mb-3 d-flex justify-content-center">
      <div class="col-3"><%= f.label :年代 %></div>
      <div class="col-3"><%= f.select :age, User.ages.keys, {} %></div>
    </div>
    <div class="row mb-3 d-flex justify-content-center">
      <div class="col-3"><%= f.label :メールアドレス %></div>
      <div class="col-3"><%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %></div>
    </div>
    <div class="row mb-3 d-flex justify-content-center">
      <div class="col-3">
      <%= f.label :パスワード %>
      <% if @minimum_password_length %>
      （<%= @minimum_password_length %> 文字以上）
      </div>
      <% end %>
      <div class="col-3"><%= f.password_field :password, class: "form-control", autocomplete: "new-password" %></div>
    </div>
    <div class="row mb-3 d-flex justify-content-center">
      <div class="col-3"><%= f.label :パスワード（確認用） %></div>
      <div class="col-3"><%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %></div>
    </div>
    <div class="row mb-3 d-flex justify-content-center">
      <div class="col-2 offset-2"><%= f.submit "新規登録", class: "btn btn-success" %></div>
    </div>
  <% end %>
</div>
