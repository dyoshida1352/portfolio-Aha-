<div class="container">
  <h2 class="mt-4 mb-1"><%= @post.post_name %></h2>
  <p class="mb-4"><%= @post.created_at.to_s(:datetime_ymd) %></p>
  <div class="row d-flex">
    <h5 class="col-6">
      <%= attachment_image_tag @post.user, :user_image, :fill, 50, 50, fallback: "no_image.jpg", size: "50x50" %>
      <%= link_to @post.user.name, users_user_path(@post.user) %>
    </h5>
    <div class="col-6">
    <% if @post.user == current_user %>
      <td><%= link_to "編集する", edit_users_post_path(@post), class:"btn btn-sm btn-success" %></td>
      <td><%= link_to "削除する", users_post_path(@post), method: :delete, "data-confirm" => "本当に消しますか？", class:"btn btn-sm btn-danger" %></td>
    <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-4" id="post_<%= @post.id %>">
      <div><%= attachment_image_tag @post, :post_image, fallback: "no_post_image.jpg", size: "250x200" %></div>
      <% if user_signed_in? %>
        <p>いいね<span class="like-btn"><%= render "users/likes/like-btn", post: @post %></span></p>
      <% else %>
        <p class="post-comments-count">いいね数：<%= @post.likes.count %></p>
      <% end %>
      <p class="post-comments-count">コメント数：<%= @post.post_comments.count %></p>
      <p><%= render "tag", post: @post %></p>
    </div>
    <div class="col-6">
      <p>（アイデア説明）</p>
      <p><%= @post.post_description %></p>
    </div>
  </div>
  <h3 class="mt-3 mb-3 text-center">コメント一覧</h3>
  <table class="post_comments table table-hover table-inverse">
    <%= render 'users/post_comments/comment', post: @post %>
  </table>
  <%= form_with model:[:users, @post, @post_comment] do |f| %>
    <%= f.text_area :post_comment, size:"90x5" %><br>
    <%= f.submit 'コメントする'%>
  <% end %>
</div>
