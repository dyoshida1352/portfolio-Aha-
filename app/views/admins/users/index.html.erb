<div class="container mt-5 mb-5">
  <h2 class="mt-4 mb-5">ユーザー一覧<span class="h4"> (全<%= @users.count %>件)</span></h2>
  <table class="table table-hover orders-table">
    <thead class="bg-light">
      <tr>
        <th>ユーザーID</th>
        <th>ユーザーネーム</th>
        <th>年代</th>
        <th>メールアドレス</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= link_to user.name, admins_user_path(user) %></td>
        <td><%= user.age %></td>
        <td><%= user.email %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <div class="d-flex justify-content-center"> <!-- ページング機能　-->
    <%= paginate @users %>
  </div>
</div>