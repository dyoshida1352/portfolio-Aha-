<div class="container">
  <h2 class="mt-4 mb-4">ユーザー一覧</h2>
  <table class="table table-hover orders-table">
    <thead>
      <tr>
        <th>ユーザーID</th>
        <th>ユーザーネーム</th>
        <th>年代</th>
        <th>メールアドレス</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= link_to user.name, admins_user_path(user) %></td>
        <td><%= user.age %></td>
        <td><%= user.email %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <div class="row offset-5">
    <%= paginate @users %>
  </div>
</div>