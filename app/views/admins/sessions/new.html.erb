<div class="container mt-5">
  <h2 class="mt-4 mb-5 text-center">管理者ログイン</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row mb-3 d-flex justify-content-center">
      <div class="col-3"><%= f.label :メールアドレス %></div>
      <div class="col-3"><%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %></div>
    </div>
    <div class="row mb-3 d-flex justify-content-center">
      <div class="col-3"><%= f.label :パスワード %></div>
      <div class="col-3"><%= f.password_field :password, class: "form-control", autocomplete: "current-password" %></div>
    </div>
    <% if devise_mapping.rememberable? %>
      <div class="row mb-3 d-flex justify-content-center">
        <div class="col-2 offset-2"><%= f.check_box :remember_me %>　<%= f.label :パスワードを記憶する %></div>
      </div>
    <% end %>
    <div class="row d-flex justify-content-center">
      <div class="col-2 offset-2"><%= f.submit "ログイン", class: "btn btn-success" %></div>
    </div>
  <% end %>
  </div>
</div>
