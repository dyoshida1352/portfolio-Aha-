<div class="container">
  <div class="row mt-4 mb-4">
    <div class="col-md-12 align-ceter">
      <h2>アイデア一覧</h2><span>(全<%= @posts.count %>件)</span>
      <div class="col-md-8 offset-md-1">
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th>アイデア名</th>
              <th>ユーザー名</th>
              <th>その他</th>
              <th colspan=5></th>
            </tr>
          </thead>
          <tbody>
            <% @posts.each do |post| %>
            <tr>
              <td><%= link_to post.post_name, admins_post_path(post) %></td>
              <td><%= link_to post.user.name, admins_user_path(post.user) %></td>
              <td><%= post.created_at.to_s(:datetime_ymd) %></td>
              <td>いいね数:<%= post.likes.count %></td>
              <td>コメント数：<%= post.post_comments.count %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="d-flex justify-content-center"> <!-- ページング機能　-->
      <%= paginate @posts %>
    </div>
  </div>
</div>