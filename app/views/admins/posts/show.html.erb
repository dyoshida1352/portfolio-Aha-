<div class="container">
  <h2 class="mt-4 mb-1"><%= @post.post_name %></h2>
  <p class="mb-4"><%= @post.created_at.to_s(:datetime_ymd) %></p>
  <%= link_to "編集する", edit_admins_post_path(@post), class:"btn btn-sm btn-success" %>
  <%= link_to "削除する", admins_post_path(@post), method: :delete, "data-confirm" => "本当に消しますか？", class:"btn btn-sm btn-danger" %>
  <div class="row d-flex">
    <h5 class="col-6">
      <%= attachment_image_tag @post.user, :user_image, :fill, 50, 50, fallback: "no_image.jpg", size: "50x50" %>
      <%= link_to @post.user.name, users_user_path(@post.user) %>
    </h5>
  </div>
  <div class="row">
    <div class="col-4" id="post_<%= @post.id %>">
      <div><%= attachment_image_tag @post, :post_image, fallback: "no_post_image.jpg", size: "250x200" %></div>
      <p>いいね<%= @post.likes.count %></p>
      <p class="post-comments-count">コメント数：<%= @post.post_comments.count %></p>
      <p><%= render "users/posts/tag", post: @post %></p>
    </div>
    <div class="col-6">
      <p>（アイデア説明）</p>
      <p><%= @post.post_description %></p>
    </div>
  </div>
  <h3 class="mt-3 mb-3 text-center">コメント一覧</h3>
  <table class="post_comments table table-hover table-inverse">
    <%= render 'users/post_comments/comment', post: @post %>
  </table>
</div>