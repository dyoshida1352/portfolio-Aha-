<div class="container mt-5">
  <h2 class="mt-4 mb-2"><%= @invite.invite_name %></h2>
  <h5 class="mb-5"><%= @invite.created_at.to_s(:datetime_ymd) %></h5>
  <%= link_to "編集する", edit_admins_invite_path(@invite), class:"btn btn-sm btn-success" %>
  <%= link_to "削除する", admins_invite_path(@invite), method: :delete, "data-confirm" => "本当に消しますか？", class:"btn btn-sm btn-danger" %>
  <div class="row d-flex">
    <h5 class="col-6">
      <%= attachment_image_tag @invite.user, :user_image, :fill, 50, 50, fallback: "no_image.jpg", size: "50x50" %>
      <%= link_to @invite.user.name, admins_user_path(@invite.user) %>
    </h5>
  </div>
  <div class="row">
    <div class="col-4" id="invite_<%= @invite.id %>">
      <div><%= attachment_image_tag @invite, :invite_image, fallback: "no_invite_image.jpg", size: "250x200" %></div>
      <p class="invite-comments-count">コメント数：<%= @invite.invite_comments.count %></p>
      <p><%= render "users/invites/tag", invite: @invite %></p>
    </div>
    <div class="col-6">
      <p>（アイデア説明）</p>
      <p><%= @invite.invite_description %></p>
    </div>
  </div>
  <h3 class="mt-3 mb-3 text-center">コメント一覧</h3>
  <table class="invite_comments table table-hover table-inverse">
    <%= render 'users/invite_comments/comment', invite: @invite %>
  </table>
</div>